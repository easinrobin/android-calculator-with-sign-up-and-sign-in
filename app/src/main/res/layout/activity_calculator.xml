<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.robin.asus.calculator.Calculator"
    android:background="@color/fbutton_color_alizarin">

    <EditText
        android:layout_width="match_parent"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText"
        android:background="?attr/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:layout_height="150dp"
        android:textColor="@android:color/white"
        android:hint="Calculations" />

    <Button
        android:text="1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:id="@+id/Button1"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <Button
        android:text="2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/Button1"
        android:id="@+id/Button2"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:background="@color/colorAccent" />

    <Button
        android:text="3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/Button2"
        android:id="@+id/Button3"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:background="@color/colorAccent" />

    <Button
        android:text="+"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText"
        android:layout_toEndOf="@+id/Button3"
        android:id="@+id/Button11"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button1"
        android:layout_alignParentStart="true"
        android:id="@+id/Button4"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button2"
        android:layout_toEndOf="@+id/Button4"
        android:id="@+id/Button5"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button3"
        android:layout_toEndOf="@+id/Button5"
        android:id="@+id/Button6"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="-"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button3"
        android:layout_toEndOf="@+id/Button6"
        android:id="@+id/Button12"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <Button
        android:text="7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button4"
        android:layout_alignParentStart="true"
        android:id="@+id/Button7"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button5"
        android:layout_toEndOf="@+id/Button7"
        android:id="@+id/Button8"
        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button5"
        android:layout_toEndOf="@+id/Button8"
        android:id="@+id/Button9"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp"/>

    <Button
        android:text="*"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button6"
        android:layout_toEndOf="@+id/Button6"
        android:id="@+id/Button13"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp"/>

    <Button
        android:text="0"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:layout_below="@+id/Button7"
        android:layout_alignParentStart="true"
        android:id="@+id/Button0"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp" />

    <Button
        android:text="."
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button7"
        android:layout_toEndOf="@+id/Button0"
        android:id="@+id/Button10"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp"/>

    <Button
        android:text="="
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button9"
        android:layout_toEndOf="@+id/Button10"
        android:id="@+id/Button15"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp"/>

    <Button
        android:text="/"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Button9"
        android:layout_toEndOf="@+id/Button15"
        android:id="@+id/Button14"
        android:background="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="20sp"/>

    <Button
        android:text="Clear"
        android:layout_height="match_parent"
        android:id="@+id/ButtonC"
        android:layout_below="@+id/Button0"
        android:layout_alignEnd="@+id/Button14"
        android:layout_toEndOf="@+id/Button0"
        android:layout_alignParentStart="true"
        android:layout_width="360dp"
        android:background="@color/colorAccent" />


</RelativeLayout>
